@charset "utf-8"

*
    margin 0
    padding 0
    user-select none
form,ul,ol,li,dl,dt,dd,h1,h2,h3,h4,h5,p
    list-style none outside none
a
    text-decoration none
    color #ccc
    outline none
    &:hover
        text-decoration underline
        color #1298F4
    img
        border none
.fr
    float right
.fl
    float left
body
    height 100%
    font 12px/1.8 "Microsoft YaHei",simsong
    overflow hidden

/*任务栏*/
.ww-task-bar
    position absolute
    right 0
    bottom 0
    left 0
    width 100%
    height 29px
    overflow hidden
    border-top 1px solid #272C36
    background #31323A
    opacity 0.9
    .task-window
        position absolute
        top 0
        right 60px
        left 2px
        height 28px
        overflow hidden
        float left
        li
            position relative
            float left
            width 125px
            height 26px
            margin-right 1px
            overflow hidden
            color #F4F4F4
            border 1px solid #272C36
            cursor pointer
        b
            background url("/public/images/dashboard/desktop_spr_x.png") repeat-x
            display block
            height 24px
            font-weight normal
            border 1px solid #6F758A
            &:hover
                border 1px solid #9196A1
                background-position 0 -25px
            &:active
                border 1px solid #647382
                background-position 0 -50px
            &.focus
                border 1px solid #B8BFCA
                background-position 0 -75px
        img
            position absolute
            top 5px
            left 5px
            width 16px
            height 16px
            border-radius 3px
        span
            display block
            width 95px
            height 24px
            padding-left 25px
            line-height 25px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
    .task-panel
        position absolute
        top 0
        right 0
        height 28px
        overflow hidden
        float left
        li
            position relative
            float left
            width 100px
            height 26px
            text-align center
            margin-right 1px
            overflow hidden
            color #F4F4F4
            border 1px solid #272C36
            cursor pointer
        b
            background url("/public/images/dashboard/desktop_spr_x.png") repeat-x
            display block
            height 24px
            font-weight normal
            border 1px solid #6F758A
            &:hover
                border 1px solid #AEB2BA
                background-position 0 -25px
            &:active
                border 1px solid #647382
                background-position 0 -50px
            &.focus
                border 1px solid #B8BFCA
                background-position 0 -75px
        img
            position absolute
            top 5px
            left 5px
            width 16px
            height 16px
            border-radius 3px
        span
            display block
            width 95px
            height 24px
            line-height 25px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis

.desktop-view
    background-position 0 0
    &:hover
        background-position -23px 0
    &:active
        background-position -46px 0

/*桌面*/
.ww-desk
    position absolute
    top 0
    bottom 30px
    width 100%
    overflow hidden
    z-index 2
    ul
        user-select none
        width 100%
        height 100%
        overflow hidden
        position absolute
        li
            user-select none
            width 80px
            height 57px
            padding 10px 0
            text-align center
            position absolute
            cursor pointer
            img
                border-radius 3px
                display block
                height 32px
                width 32px
                margin auto
            span
                user-select none
                background none repeat scroll 0 0 rgba(0, 0, 0, 0.3)
                border-radius 10px
                filter none
                color #fff
                display inline-block
                height 20px
                line-height 20px
                margin-top 5px
                overflow hidden
                padding 0 8px
                position relative
                text-align center
                text-overflow ellipsis
                white-space nowrap
                z-index 1
            em
                 display none
                 position absolute
                 top 0
                 left 0
                 z-index 0
                 width 80px
                 height 77px
                 border-radius 5px
                 background #000
                 opacity 0.12
            &:hover
            &.hover
                display block
            &.focus
                display block
                opacity 0.25
    .title-bar
        user-select none

/*窗口*/
.window-container
    position absolute
    padding 2px
    overflow hidden
    border-radius 3px
    background #656672
    box-shadow 0 1px 5px rgba(0, 0, 0, 0.4)
    .title-bar
        background-color #EBEBEB
        border 1px solid #ccc
        position relative
        z-index 10
        height 26px
        padding 0 20px
        line-height 26px
        overflow hidden
        color #393836
        font-weight bold
        border-bottom 1px solid #CCC
        cursor move
        border-radius 3px 3px 0 0
    .window-current
        background #363740
        box-shadow 0 1px 10px rgba(0, 0, 0, 0.6)
        .title-bar
            background-position 0 -31px
    .title-handle
        overflow hidden
        position absolute
        right 5px
        top 4px
        .ha-min
            background-position -5px -58px
            &:hover
                background-position -5px -30px
        .ha-max
            background-position -34px -59px
            &:hover
                background-position -34px -30px
        .ha-revert
            background-position -94px -59px
            &:hover
                background-position -94px -30px
        .ha-close
            background-position -64px -59px
            &:hover
                background-position -64px -30px
        a
            float left
            width 19px
            height 21px
            margin-left 5px
            line-height 10
            overflow hidden
            background url("/public/images/dashboard/sprite_main_png.png") no-repeat
    .window-frame
        position absolute
        top 30px
        right 2px
        bottom 32px
        left 2px
        background #FFF
        iframe
            position absolute
            border 0
            height 100%
            width 100%
            top 0
            bottom 0
            left 0
            right 0
    .set-bar
        width 100%
        position absolute
        background #E8E8E8
        border-top 1px solid #b9b9b9
        height 30px
        left 2px
        right 2px
        bottom 2px
        .btn
            margin-top 3px
            margin-right 5px
            border 1px solid #E8E8E8
            border-radius 3px
            color #7D7D7D
            cursor pointer
            display inline-block
            height 20px
            padding 1px
            position relative
            &:hover
                border 1px solid #7D7D7D
                background #fff
                color #333
                text-decoration none
            .icon
                left 8px
                position absolute
                top 3px
            .btn-con
                height 20px
                line-height 21px
                overflow hidden
                padding 0 8px

/*右键提示*/
.popup-menu
    background url(popup_menu.gif) repeat-y scroll 0 0 #FFF
    border 1px solid #AEAEAE
    box-shadow 0 0 6px rgba(0, 0, 0, 0.4)
    position absolute
    width 125px
    ul
        padding 1px
        position relative
        li
            height 24px
            position relative
            vertical-align middle
    a
        background-position 100px 100px
        border-radius 2px
        color #333333
        display block
        height 24px
        line-height 24px
        overflow hidden
        padding-left 35px
        &:hover
        .focus
            background-color #3B7CE6
            background-position 0 -780px
            color #FFFFFF
            text-decoration none
