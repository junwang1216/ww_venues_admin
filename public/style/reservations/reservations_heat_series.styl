@charset "utf-8"
@import "../base"

.ww-wrapper
    .row-fluid
        margin-right 0
        .widget
            background #fafafa
            border 1px solid #e0dede
            clear both
            margin-top 0
            margin-bottom 30px
            -webkit-border-radius 3px
            -moz-border-radius 3px
            border-radius 3px
            .widget-body
                padding 10px
                border-bottom 1px solid #b3b3b3
                -webkit-border-radius 0 0 2px 2px
                -moz-border-radius 0 0 2px 2px
                border-radius 0 0 2px 2px
            .heat-show
                padding 0 30px
                width 100%
                position relative
                overflow hidden
                .arrow-left
                    top 0
                    left 0
                    position absolute
                    width 40px
                    cursor pointer
                    height 100%
                    background #e4e4e4
                    &:hover
                        background #CCC
                    img
                        width 90%
                        position absolute
                        top 40%
                .arrow-right
                    top 0
                    right  0
                    position absolute
                    width 40px
                    cursor pointer
                    height 100%
                    background #e4e4e4
                    &:hover
                        background #CCC
                    img
                        width 90%
                        position absolute
                        top 40%
                table
                    margin-bottom 0
                    td
                        height 50px
                        width 80px
                        text-align center
                        vertical-align middle
                        padding 0
                        border-right 0
                        border-bottom 0
                        cursor pointer
                        span
                            display block
                            height 25px
                            line-height 25px
                            &.order-80
                                background-color #367517
                            &.order-60
                                background-color #489620
                            &.order-40
                                background-color #50A624
                            &.order-20
                                background-color #C8E2B1
                            &.order-00
                                background-color #E6F1D8
                            &.consult-80
                                background-color #D59B00
                            &.consult-60
                                background-color #F3C246
                            &.consult-40
                                background-color #F9CC76
                            &.consult-20
                                background-color #FCE0A6
                            &.consult-00
                                background-color #FEEBD0
    .dashboard-right
        display none