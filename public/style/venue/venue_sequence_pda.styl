@charset "utf-8"
@import "../base"

.ww-wrapper
    .wrapper
        .heat-filter
            border none
            padding 0
            margin 0
            .panel-body
                padding 0 0 10px
                .form-inline
                    .form-group
                        margin-right 20px
                        label
                            margin-bottom 0
                            margin-right 10px
        .heat-show
            /*padding 0 30px*/
            width 100%
            position relative
            overflow hidden
            .arrow-left
                top 0
                left 0
                position absolute
                width 30px
                cursor pointer
                height 100%
                background-color #e0e0e0
                background-image -webkit-gradient(linear, left top, left bottom, from(whitesmoke), to(#e0e0e0))
                background-image -webkit-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -moz-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -ms-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -o-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image linear-gradient(left, whitesmoke, #e0e0e0)
                &:hover
                    background #e5e5e5
                img
                    width 90%
                    position absolute
                    top 46%
            .arrow-right
                top 0
                right  0
                position absolute
                width 30px
                cursor pointer
                height 100%
                background-color #e0e0e0
                background-image -webkit-gradient(linear, left top, left bottom, from(whitesmoke), to(#e0e0e0))
                background-image -webkit-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -moz-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -ms-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -o-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image linear-gradient(left, whitesmoke, #e0e0e0)
                &:hover
                    background #e5e5e5
                img
                    width 90%
                    position absolute
                    top 46%
            table
                margin-bottom 0
                td
                    height 50px
                    width 80px
                    text-align center
                    vertical-align middle
                    padding 0
                    border-right 0
                    border-bottom 0
                    cursor pointer
                    span
                        display block
                        height 25px
                        line-height 25px
                        &.order-80
                            background-color #367517
                        &.order-60
                            background-color #489620
                        &.order-40
                            background-color #50A624
                        &.order-20
                            background-color #C8E2B1
                        &.order-00
                            background-color #E6F1D8
                        &.consult-80
                            background-color #D59B00
                        &.consult-60
                            background-color #F3C246
                        &.consult-40
                            background-color #F9CC76
                        &.consult-20
                            background-color #FCE0A6
                        &.consult-00
                            background-color #FEEBD0
        .heat-tips
            padding 20px 40px 10px
            span
                padding 4px 10px
                margin-left 14px
            .order-80
                background-color #367517
            .order-60
                background-color #489620
            .order-40
                background-color #50A624
            .order-20
                background-color #C8E2B1
            .order-00
                background-color #E6F1D8
            .consult-80
                background-color #D59B00
            .consult-60
                background-color #F3C246
            .consult-40
                background-color #F9CC76
            .consult-20
                background-color #FCE0A6
            .consult-00
                background-color #FEEBD0
