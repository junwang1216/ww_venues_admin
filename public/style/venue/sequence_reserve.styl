@charset "utf-8"
@import "../base"

.ww-wrapper
    .wrapper
        .sequence-filter
            border none
            padding 0
            margin 0
            .panel-body
                padding 0 0 10px
                .navbar
                    margin-bottom 10px
                .form-inline
                    .form-group
                        margin-right 20px
                        label
                            margin-bottom 0
                            margin-right 10px
        .sequence-show
            /*padding 0 30px*/
            width 100%
            position relative
            overflow hidden
            .arrow-left
                top 0
                left 0
                position absolute
                width 30px
                cursor pointer
                height 100%
                background-color #e0e0e0
                background-image -webkit-gradient(linear, left top, left bottom, from(whitesmoke), to(#e0e0e0))
                background-image -webkit-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -moz-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -ms-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -o-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image linear-gradient(left, whitesmoke, #e0e0e0)
                &:hover
                    background #e5e5e5
                img
                    width 90%
                    position absolute
                    top 46%
            .arrow-right
                top 0
                right  0
                position absolute
                width 30px
                cursor pointer
                height 100%
                background-color #e0e0e0
                background-image -webkit-gradient(linear, left top, left bottom, from(whitesmoke), to(#e0e0e0))
                background-image -webkit-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -moz-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -ms-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image -o-linear-gradient(left, whitesmoke, #e0e0e0)
                background-image linear-gradient(left, whitesmoke, #e0e0e0)
                &:hover
                    background #e5e5e5
                img
                    width 90%
                    position absolute
                    top 46%
            table
                margin-bottom 0
                width 100%
                td
                    height 40px
                    width 100px
                    text-align center
                    vertical-align middle
                    padding 0
                    border-right 0
                    border-bottom 0
                    cursor pointer
                    &.time
                        width 114px
                    &.phone
                        background url("/public/images/icons/phone.png") no-repeat 6px
                        background-size 20px
                    &.mobile
                        background url("/public/images/icons/mobile.png") no-repeat 6px
                        background-size 20px
                    &.computer
                        background url("/public/images/icons/computer.png") no-repeat 6px
                        background-size 20px
                    &.ordered
                        background-color #3187bf
                        color #fff
                    &.unpaid
                        background-color #e6a200
                        color #fff
                    span
                        display block
                    &.selected
                        background url("/public/images/icons/checked.png") no-repeat center
                        background-size 20px
                    &.locked
                        background #E8E8E8 url("/public/images/icons/locked.png") no-repeat center
                        background-size 20px
                    &.disabled
                        background #E8E8E8 url("/public/images/icons/disabled.png") no-repeat center
                        background-size 20px
                tr
                    &:nth-child(1)
                        background-color #f2f2f2
                        td
                            cursor default
        .sequence-tips
            padding 20px 40px 10px
            span
                padding 4px 10px
                margin-right 14px
            .ordered
                background-color #3187bf
                color #fff
            .unpaid
                background-color #e6a200
                color #fff
            .locked
                background-color #E8E8E8
                color #fff
            .disabled
                background-color #E8E8E8
                color #fff
